<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWheelHunter.Views.pgPrincipal"
             Title="pgPrincipal">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <Label Text="Notícias em Destaque"
       FontSize="24"
       FontAttributes="Bold"
       TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"
       HorizontalOptions="Center"/>

            <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                <HorizontalStackLayout Spacing="20" Padding="0,0,0,10">

                    <Frame WidthRequest="280"
               CornerRadius="12"
               BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
               BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
               HasShadow="True"
               Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                      Margin="-12,-12,-12,0"
                      HeightRequest="210">
                                <Image Source="noticia_carros.jpg"
                           HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label Text="AUTOMOTIVO"
                           TextColor="#38A169"
                           FontSize="14"
                           FontAttributes="Bold"
                           CharacterSpacing="1.1"
                           Margin="0,0,0,-4"/>

                                <Label Text="Novo modelo elétrico bate recordes"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Mais de 10.000 unidades vendidas no primeiro mês no mercado nacional."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                           LineBreakMode="WordWrap"
                           MaxLines="3"/>

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Frame WidthRequest="36" 
                               HeightRequest="36"
                               CornerRadius="18"
                               Padding="0"
                               IsClippedToBounds="True">
                                        <Image Source="autor_jornalismo.jpg"/>
                                    </Frame>

                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="Carlos Motta"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                        <Label Text="15 Jun, 2023 · 5min"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame WidthRequest="280"
               CornerRadius="12"
               BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
               BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
               HasShadow="True"
               Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                      Margin="-12,-12,-12,0"
                      HeightRequest="210">
                                <Image Source="noticia2.jpg"
                           HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label Text="TECNOLOGIA"
                           TextColor="#805AD5"
                           FontSize="14"
                           FontAttributes="Bold"
                           CharacterSpacing="1.1"
                           Margin="0,0,0,-4"/>

                                <Label Text="Nova IA revoluciona segurança veicular"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Startup lança sistema de prevenção de acidentes com aprendizado contínuo."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                           LineBreakMode="WordWrap"
                           MaxLines="3"/>

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Frame WidthRequest="36" 
                               HeightRequest="36"
                               CornerRadius="18"
                               Padding="0"
                               IsClippedToBounds="True">
                                        <Image Source="autor_tecnologia.jpg"/>
                                    </Frame>

                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="Ana Ribeiro"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                        <Label Text="10 Jun, 2023 · 3min"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame WidthRequest="280"
               CornerRadius="12"
               BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
               BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
               HasShadow="True"
               Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                      Margin="-12,-12,-12,0"
                      HeightRequest="210">
                                <Image Source="noticia3.jpg"
                           HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label Text="MERCADO"
                           TextColor="#D69E2E"
                           FontSize="14"
                           FontAttributes="Bold"
                           CharacterSpacing="1.1"
                           Margin="0,0,0,-4"/>

                                <Label Text="Montadora anuncia investimentos no Brasil"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Nova fábrica será construída no Sudeste com foco em elétricos."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                           LineBreakMode="WordWrap"
                           MaxLines="3"/>

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Frame WidthRequest="36" 
                               HeightRequest="36"
                               CornerRadius="18"
                               Padding="0"
                               IsClippedToBounds="True">
                                        <Image Source="autor_economia.jpg"/>
                                    </Frame>

                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="João Lima"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                        <Label Text="08 Jun, 2023 · 4min"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                </HorizontalStackLayout>
            </ScrollView>

            <Label Text="Últimos Lançamentos"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>

            <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                <HorizontalStackLayout Spacing="20" Padding="10,0">

                    <Frame WidthRequest="280"
                       CornerRadius="12"
                       BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
                       HasShadow="True"
                       Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                              Margin="-12,-12,-12,0"
                              HeightRequest="210">
                                <Image Source="lancamento_carro.jpg"
                                   HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="14">
                                <Label Text="LANÇAMENTO"
                                   TextColor="#3182CE"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   CharacterSpacing="1.1"/>

                                <Label Text="SUV Premium 2024 já está disponível"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Tecnologia de ponta, interior luxuoso e motor híbrido econômico."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                                   LineBreakMode="WordWrap"
                                   MaxLines="3"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame WidthRequest="280"
                       CornerRadius="12"
                       BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
                       HasShadow="True"
                       Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                              Margin="-12,-12,-12,0"
                              HeightRequest="210">
                                <Image Source="lancamento_carro.jpg"
                                   HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="14">
                                <Label Text="LANÇAMENTO"
                                   TextColor="#3182CE"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   CharacterSpacing="1.1"/>

                                <Label Text="SUV Premium 2024 já está disponível"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Tecnologia de ponta, interior luxuoso e motor híbrido econômico."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                                   LineBreakMode="WordWrap"
                                   MaxLines="3"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame WidthRequest="280"
                       CornerRadius="12"
                       BorderColor="{AppThemeBinding Light=#EDF2F7, Dark=#1A202C}"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#171923}"
                       HasShadow="True"
                       Padding="0">

                        <Grid RowDefinitions="210, *">
                            <Grid BackgroundColor="#EDF2F7" 
                              Margin="-12,-12,-12,0"
                              HeightRequest="210">
                                <Image Source="lancamento_carro.jpg"
                                   HeightRequest="210"/>
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="12">
                                <Label Text="LANÇAMENTO"
                                   TextColor="#3182CE"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   CharacterSpacing="1.1"/>

                                <Label Text="SUV Premium 2024 já está disponível"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2D3748, Dark=White}"/>

                                <Label Text="Tecnologia de ponta, interior luxuoso e motor híbrido econômico."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#718096, Dark=#A0AEC0}"
                                   LineBreakMode="WordWrap"
                                   MaxLines="3"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>