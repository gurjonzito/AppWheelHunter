<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppWheelHunter.Views.pgPrincipal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="pgPrincipal"
    BackgroundColor="{AppThemeBinding Light=#F5F5F5,
                                      Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Notícias em Destaque"
                TextColor="{AppThemeBinding Light=#000000,
                                            Dark=#FFFFFF}" />

            <ScrollView HorizontalOptions="Center" Orientation="Horizontal">
                <HorizontalStackLayout Padding="0,0,0,10" Spacing="20">

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="millenium.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label
                                    Margin="0,0,0,-4"
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="LICENCIADOS"
                                    TextColor="#E31937" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Hot Wheels x Star Wars: Coleção Starships"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="Naves de Star Wars transformadas em carros Hot Wheels, incluindo o Millennium Falcon e o X-Wing."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">

                                    <VerticalStackLayout Spacing="2">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="13"
                                            Text="Star Wars + Mattel"
                                            TextColor="{AppThemeBinding Light=#000000,
                                                                        Dark=#FFFFFF}" />

                                        <Label FontSize="11" Text="15 Mai, 2024" TextColor="{AppThemeBinding Light=#555555, Dark=#A0A0A0}" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="porsche.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label
                                    Margin="0,0,0,-4"
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="COLECIONÁVEIS"
                                    TextColor="#E31937" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Série Dream Garage com 5 Carros Premium"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="Inclui modelos como o Porsche 911 GT3 e o Nissan Skyline R34. Exclusivo para assinantes Mattel."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">

                                    <VerticalStackLayout Spacing="2">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="13"
                                            Text="Mattel"
                                            TextColor="{AppThemeBinding Light=#000000,
                                                                        Dark=#FFFFFF}" />

                                        <Label FontSize="11" Text="20 Jun, 2024" TextColor="{AppThemeBinding Light=#555555, Dark=#A0A0A0}" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="opala.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="10">
                                <Label
                                    Margin="0,0,0,-4"
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="REGIONAL"
                                    TextColor="#E31937" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Coleção Brasil Exclusive 2024 com Volkswagen Fusca"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="A série Brasil Exclusive 2024 traz um Fusca azul com rodas cromadas e um Chevrolet Opala SS em edição limitada."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />

                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">

                                    <VerticalStackLayout Spacing="2">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="13"
                                            Text="Hot Wheels Brasil"
                                            TextColor="{AppThemeBinding Light=#000000,
                                                                        Dark=#FFFFFF}" />

                                        <Label FontSize="11" Text="12 Mai, 2024" TextColor="{AppThemeBinding Light=#555555, Dark=#A0A0A0}" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                </HorizontalStackLayout>
            </ScrollView>

            <Label
                Margin="0,20,0,0"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Lançamentos do Ano"
                TextColor="{AppThemeBinding Light=#000000,
                                            Dark=#FFFFFF}" />

            <ScrollView HorizontalOptions="Center" Orientation="Horizontal">
                <HorizontalStackLayout Padding="10,0" Spacing="20">

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="mustang.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="14">
                                <Label
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="LANÇAMENTO"
                                    TextColor="#FFD700" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="'71 Mustang Funny Car – Super Treasure Hunt (Lote H)"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="Uma homenagem ao clássico muscle car, apresentando uma pintura Spectraflame vermelha vibrante."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="optimus.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="14">
                                <Label
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="LANÇAMENTO"
                                    TextColor="#FFD700" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Optimus Prime – Transformers (Lote F)"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="Inspirado no líder dos Autobots, este modelo captura a essência do Optimus Prime em escala 1:64."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <Frame
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                                          Dark=#1E1E1E}"
                        CornerRadius="12"
                        HasShadow="True"
                        WidthRequest="280">

                        <Grid RowDefinitions="210, *">
                            <Grid Margin="-12,-12,-12,0" BackgroundColor="#EDF2F7" HeightRequest="210">
                                <Image HeightRequest="210" Source="audi.png" />
                            </Grid>

                            <VerticalStackLayout Grid.Row="1" Padding="16" Spacing="12">
                                <Label
                                    CharacterSpacing="1.1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="LANÇAMENTO"
                                    TextColor="#FFD700" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="'87 Audi Quattro – Super Treasure Hunt (Lote A)"
                                    TextColor="{AppThemeBinding Light=#000000,
                                                                Dark=#FFFFFF}" />

                                <Label
                                    FontSize="14"
                                    LineBreakMode="WordWrap"
                                    MaxLines="3"
                                    Text="Icônico Audi Quattro de 1987, famoso por seu desempenho nas pistas de rally."
                                    TextColor="{AppThemeBinding Light=#555555,
                                                                Dark=#A0A0A0}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>